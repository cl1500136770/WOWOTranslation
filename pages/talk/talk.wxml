    <view hidden='{{hideTalkEN}}' class="c-minheight t-content-viewSix">
      <image class="t-content-viewSix-img" mode="scaleToFill" src="/images/gril.jpg" />
      <div id="preloader">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
    </view>

    <!--定位view 用来打开页面时定位至最底部-->
    <view id='viewhelp'></view>
  </scroll-view>
</view>

 <view class="c-minheight t-bottomView">
  <button catchtouchstart='startTalkEN' catchtouchend='stopTalkEN' plain='{{plainEN}}' class="c-block t-bottom-txtEN">Hold to Talk</button>
  <button catchtouchstart='startTalkZH' catchtouchend='stopTalkZH' plain='{{plainZH}}' class="c-block t-bottom-txtZH">按住讲话</button>
</view> 